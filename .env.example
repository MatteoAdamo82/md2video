# Directory paths
CONTENT_DIR=./content
SCRIPT_DIR=./video_scripts
OUTPUT_DIR=./video_output

# Video settings
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=24
VIDEO_BITRATE=4000k

# Audio settings
AUDIO_FPS=44100
AUDIO_NBYTES=2
AUDIO_CODEC=libmp3lame
AUDIO_BITRATE=192k
AUDIO_CHANNELS=2
AUDIO_SAMPLE_FORMAT=s16le

# Styling
VIDEO_BGCOLOR=#291d38
VIDEO_TEXT_COLOR=#ffffff
VIDEO_ACCENT_COLOR=#f22bb3

# Font settings
FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf
FONT_SIZE_H1=70
FONT_SIZE_H2=60
FONT_SIZE_H3=50
FONT_SIZE_TEXT=40

# Text settings
TEXT_LINE_SPACING=1.2
TEXT_MARGIN=0.15

# Video content
INTRO_TEXT=Ciao a tutti e bentornati sul canale!
OUTRO_TEXT=Grazie per aver guardato questo video!

# Processing
NUM_POSTS=5
SPEECH_LANG=it

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s

# Effects
DEFAULT_EFFECT=fade
TRANSITION_DURATION=0.5
PAUSE_DURATION=0.3
