# Directory e file paths
HUGO_CONTENT_DIR=content/posts
SCRIPT_OUTPUT_DIR=video_scripts
VIDEO_OUTPUT_DIR=video_output
TEMP_DIR=temp

# Post settings
NUM_POSTS=5

# Video settings
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=24

# Colors
VIDEO_BGCOLOR=#291d38
VIDEO_TEXT_COLOR=#ffffff
VIDEO_ACCENT_COLOR=#f22bb3

# Font sizes for different heading levels
VIDEO_H1_FONT_SIZE=70
VIDEO_H2_FONT_SIZE=60
VIDEO_H3_FONT_SIZE=50
VIDEO_TEXT_FONT_SIZE=40

# Font path
VIDEO_FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf

# Text wrapping
TEXT_WRAP_WIDTH=50
TEXT_LINE_HEIGHT=70
TEXT_START_Y=100

# Audio settings
TTS_LANGUAGE=it

# Video script
VIDEO_INTRO_TEXT=Ciao a tutti e bentornati sul canale!
VIDEO_OUTRO_TEXT=Grazie per aver guardato questo video! Non dimenticare di iscriverti al canale!

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s